<UserControl x:Class="GletredWpfEditor.Preview.PreviewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GletredWpfEditor.Preview" xmlns:forms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="{DynamicResource DarkSurfaceColor00dpBrush}">

    <UserControl.DataContext>
        <local:PreviewControlViewModel/>
    </UserControl.DataContext>
    
    <Grid>
        <ToolBar Height="30" VerticalAlignment="Top" Style="{DynamicResource CustomToolBarStyle}"/>
        <WindowsFormsHost Margin="4,29,1,2">
            <forms:Form FormBorderStyle="None" TopLevel="False" TopMost="False" BackColor="DarkOrange"/>
        </WindowsFormsHost>
    </Grid>
</UserControl>
